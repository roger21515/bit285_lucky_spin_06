@model LuckySpin.ViewModels.SpinViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@inject LuckySpin.Services.TextTransformService Transform
@{
    Layout = "_Layout";
    string Display = Model.IsWinning ? "display:block" : "display : none";
    
}
<h1>Lucky Spin</h1>
<button  onclick='history.go(0)'>Spin</button> <div>@Model.Numbers[0]</div><div>@Model.Numbers[1]</div><div>@Model.Numbers[2]</div>
<div id="balance">Current Balance: @Model.CurrentBalance </div>
<span style="@Display">
    <h2>Congratulations, @Model.PlayerName<br/>You Win with Lucky @Transform.numberToText(Model.PlayerLuck)!</h2>
    <img src="/Images/LuckySpinCoins.jpg" class="animated bounce" alt="Coins" />
</span>
